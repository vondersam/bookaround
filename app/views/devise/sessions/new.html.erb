<%= content_for(:title) do %>
  Bookaround | Log In
<% end %>

<div class="cont-formo">
  <div class="formo">
    <h1 class="logo-big">B</h1>

    <%= link_to "Log in with Facebook", omniauth_authorize_path(User, :facebook), class:  'btn btn-primary btn-formo' %>
    <hr />
    <p>or</p>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Email address', class: "form-center" %>
        <%= f.input :password, required: false, label: false, placeholder: 'Your password' %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log In", class: "btn-formo" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>


